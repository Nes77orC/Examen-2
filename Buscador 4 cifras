int Buscar2(char *Array)
{
int longitudMax = strlen(Array);
int aux=0;
int aux2=0;
char ver;
for(int i=0; i<longitudMax; i++)
    {
      ver=Array[i];  
 if(isdigit(Array[i]))
 {
  aux=aux+1;
 
    if(aux==4)
    {
    aux2=aux2+1;
     aux=0;
     }
 } 
  else
  {
  aux=0;
  }
}
return aux2;
}
